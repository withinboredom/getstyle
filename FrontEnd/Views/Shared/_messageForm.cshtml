<div class="container">
    <div class="row">
        <div class="col-md-9">
            <h2>Send us a message</h2>
            <form class="form-horizontal form-contact" id="send">
                <div class="form-group">
                    <label class="control-label" for="inputName">Name</label>
                    <div class="controls">
                        <div class="row">
                            <div class="col-md-6">
                                <input type="text" id="inputName" placeholder="Name" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label" for="inputEmail">Email</label>
                    <div class="controls">
                        <div class="row">
                            <div class="col-md-6">
                                <input type="email" id="inputEmail" placeholder="me@example.com" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label" for="inputMessage">Message</label>
                    <div class="controls">
                        <div class="row">
                            <div class="col-md-10">
                                <textarea id="inputMessage" placeholder="Your message here" class="form-control" rows="10"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-actions form-actions-no-bg">
                    <button data-loading-text="Sending..." type="submit" class="btn btn-lg btn-purple">Send Message</button>
                </div>
            </form>
        </div>
        <div class="col-md-3 sidebar">
            <div class="widget">
                <h2>Contact Details</h2>
                <ul class="fa-ul">
                    <li><i class="fa-li fa fa-map-marker"></i><a href="#none">997 Johnnie Dodds Blvd, Mt Pleasant, SC</a></li>
                    <li><i class="fa-li fa fa-phone"></i><a href="#none">+1 910-297-4810</a></li>
                    <li><i class="fa-li fa fa-facebook"></i><a href="#none">http://facebook.com</a></li>
                    <li><i class="fa-li fa fa-twitter"></i><a href="#none">http://twitter.com</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="row row-tiles" style="display:none" id="success_mode">
    <div class="col-md-8 col-md-offset-2">
        <div class="tile tile-horizontal">
            <span class="fa fa-star yellow"></span>
            <div class="tile-details">
                <h3>Your message has been sent!</h3>
                <p>Be on the lookout for our response</p>
            </div>
        </div>
    </div>
</div>