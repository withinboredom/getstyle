@model FrontEnd.Models.RegisterViewModel

@{
    ViewBag.Title = "Register";
}

<div class="container container-login">
    <div class="row">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-login" }))
        {
            @Html.AntiForgeryToken()
            <div class="logo"></div>
            <h1>Sign Up</h1>
            @Html.ValidationSummary()
            <div class="form-group social-login-wrapper">
                <div class="controls">
                    <div class="row">
                        <div class="col-md-6">
                            <a href="#none" class="btn btn-lg btn-block btn-facebook"><span class="fa fa-facebook-sign"></span> Sign up with Facebook</a>
                        </div>
                        <div class="col-md-6">
                            <a href="#none" class="btn btn-lg btn-block btn-twitter"><span class="fa fa-twitter-sign"></span> Sign up with Twitter</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group center">
                <div class="separator">
                    <div class="line"></div> or <div class="line"></div>
                </div>
            </div>
            <div class="form-group">
                <div class="controls">
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "email@you.com" })
                </div>
            </div>
            <div class="form-group">
                <div class="controls">
                    @Html.TextBoxFor(m => m.Password, new { @class = "form-control", placeholder = "Create Password" })
                </div>
            </div>
            <div class="form-group">
                <div class="controls">
                    <input type="submit" class="btn btn-lg btn-block btn-purple" value="Sign Up" />
                </div>
            </div>
            <div class="space-50"></div>
            <div class="form-group control-group-text">
                <div class="controls">
                    <p>Already have an account? @Html.ActionLink("Login", "Login", "Account")</p>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
